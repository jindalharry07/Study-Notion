<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= quiz.title %> | Quiz View</title>
  <link rel="stylesheet" href="/css/quiz.css">
</head>
<body class="kbc-theme">
  <header class="kbc-header">
    <h1>📄 <%= quiz.title %></h1>
    <a href="/instructor/dashboard" class="kbc-btn">🏠 Back to Dashboard</a>
  </header>

  <main class="quiz-details">
    <p><strong>Description:</strong> <%= quiz.description %></p>

    <h2>📋 Questions</h2>
    <% if (quiz.questions.length > 0) { %>
      <ul class="question-list">
        <% quiz.questions.forEach((q, index) => { %>
          <li class="question-item">
            <strong>Q<%= index + 1 %>:</strong> <%= q.questionText %><br>
            <ul>
              <% q.options.forEach((opt, i) => { %>
                <li><%= String.fromCharCode(65 + i) %>) <%= opt %></li>
              <% }) %>
            </ul>
            <p><strong>✅ Correct Answer:</strong> <%= String.fromCharCode(65 + q.correctAnswerIndex) %></p>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No questions added yet.</p>
    <% } %>
  </main>
</body>
</html>
