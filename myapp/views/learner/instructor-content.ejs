<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= instructor.name %>'s Content | StudyNotion</title>
  <link rel="stylesheet" href="/css/instructor-content.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="instructor-content-page">
  <header class="navbar">
    <div class="logo">📘 StudyNotion</div>
    <div class="title"><%= instructor.name %>'s Content</div>
    <a href="/learner/dashboard" class="back-btn">⬅ Back to Dashboard</a>
  </header>

  <main class="content-area">
    <!-- Posts Section -->
    <section>
      <h2>📝 Posts</h2>
      <% if (resources.length === 0) { %>
        <div class="empty-state">No posts found.</div>
      <% } else { %>
        <div class="card-grid">
          <% resources.forEach(r => { %>
            <div class="card">
              <h3><%= r.title %></h3>
              <p><%= r.description %></p>
              <% if (r.createdAt) { %>
                <small>Posted on <%= new Date(r.createdAt).toLocaleDateString() %></small>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>

    <!-- PDFs Section
    <section>
      <h2>📄 PDFs</h2>
      <% if (pdfs.length === 0) { %>
        <div class="empty-state">No PDFs uploaded.</div>
      <% } else { %>
        <div class="card-grid">
          <% pdfs.forEach(p => { %>
            <div class="card">
              <a href="/<%= p.filePath %>" target="_blank" download>
                <i class="fas fa-file-pdf"></i> <%= p.title %>
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section> -->

    <!-- Quizzes Section -->
    <section>
      <h2>🧠 Quizzes Available</h2>
      <% if (quizzes.length === 0) { %>
        <div class="empty-state">No quizzes available from this instructor.</div>
      <% } else { %>
        <div class="card-grid">
          <% quizzes.forEach(quiz => { %>
            <div class="quiz-card">
              <h3><%= quiz.title %></h3>
              <p><%= quiz.description %></p>
              <a href="/learner/quiz/<%= quiz._id %>" class="take-quiz-btn">Take Quiz</a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>
  </main>
</body>
</html>
